<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.tech.gigabyte.circularreveal.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:background="@drawable/acad_style"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="@string/tap_on_fab_button"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

        <RelativeLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e93a69"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button11"
                    android:layout_width="300sp"
                    android:layout_height="70sp"
                    android:layout_below="@+id/button10"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="72dp"
                    android:background="@drawable/acad_style"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/acadgild"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/you_style"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/you"
                    android:textColor="#ffff"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_above="@+id/button11"
                    android:layout_alignLeft="@+id/button11"
                    android:layout_alignStart="@+id/button11"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/thank_style"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/thank"
                    android:textColor="#343c47"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    tools:targetApi="jelly_bean" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:src="@drawable/ic_plus_white"
        app:backgroundTint="@color/coloefab"
        app:elevation="0dp"
        app:fabSize="normal" />


</RelativeLayout>